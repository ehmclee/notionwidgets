<script>
    // Create the target date in the local timezone
    const myDate = new Date(2026, 2, 14, 0, 0, 0); // (0-indexed) Jan(0), Feb(1), etc.
    console.log("Target Date (Localized):", myDate.toLocaleString());

    // Countdown
    let timer = setInterval(function() {
        // Get today's date
        const today = new Date();

        // Get the timestamp in milliseconds (localized to the system timezone)
        const localizedTimestamp = today.getTime();

        console.log("Localized Timestamp (ms):", localizedTimestamp);

        // Get the difference
        const diff = myDate - today;

        // Math
        let weeks = Math.floor(diff / (1000 * 60 * 60 * 24 * 7));
        let days = Math.floor((diff % (1000 * 60 * 60 * 24 * 7)) / (1000 * 60 * 60 * 24));
        let hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));

        // Display
        document.getElementById("weeks").innerHTML = weeks;
        document.getElementById("days").innerHTML = days;
        document.getElementById("hours").innerHTML = hours;
    }, 1000); // Update every second
</script>
